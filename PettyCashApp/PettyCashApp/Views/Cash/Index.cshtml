@model PettyCashApp.Models.PettyRequest

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "PettyRequest", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))

{
    <div class="form-group row">
        @if (!string.IsNullOrEmpty(Model.ActionMessage))
        {
            if (Model.ActionStatus)
            {
                <div class="alert alert-success" role="alert">
                    <strong>@Model.ActionMessage</strong>
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <strong>@Model.ActionMessage</strong>
                </div>
            }

        }
    </div>


    <div class="form-group">
        @Html.TextBoxFor(m => m.RequestName, new { @class = "form-control", @placeholder = "Name" })
        @Html.ValidationMessageFor(m => m.RequestName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(m => m.RequestEmail, new { @class = "form-control", @placeholder = " Email" })
        @Html.ValidationMessageFor(m => m.RequestEmail, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.TelephoneNumber, new { @class = "form-control", @placeholder = "Number" })
        @Html.ValidationMessageFor(m => m.TelephoneNumber, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Department, new { @class = "form-control", @placeholder = "Department" })
        @Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @placeholder = "Amount" })
        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(m => m.ReasonForRequest, new { @class = "form-control", @placeholder = "Reason for Request" })
        @Html.ValidationMessageFor(m => m.ReasonForRequest, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(m => m.Requestdate, new { @class = "form-control", @placeholder = "Date" })
        @Html.ValidationMessageFor(m => m.Requestdate, "", new { @class = "text-danger" })
    </div>



    <div class="form-group ">
        <button type="submit" id="btnLogin" class="btn  btn-primary">
            Register
        </button>
    </div>



}